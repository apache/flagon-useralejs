{
  "manifest_version": 2,
  "name": "User ALE Extension",
  "version": "2.4.0",
  "description": "Injects UserALE.js into every page for testing & user research purposes",
  "icons": {
    "48": "icons/border-48.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["content.js"],
      "all_frames": true
    }
  ],
  "options_ui": {
    "page": "optionsPage.html"
  }
}