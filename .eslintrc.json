{
  "parserOptions" : {
    "sourceType" : "module",
    "ecmaFeatures" : {
      "modules" : true
    }
  },
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "env" : {
    "browser" : true,
    "es6" : true
  },
  "rules" : {
    "no-cond-assign" : "warn",
    "no-constant-condition" : "warn",
    "@typescript-eslint/no-unused-vars": "warn",
  },
}
